<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="campground[title]" required>
                <div class="valid-feedback">
                    That's okay
                </div>
            </div>    
            <div class="mb-3">
                <label class="form-lable" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="campground[location]" required>
                 <div class="valid-feedback">
                    That's okay
                </div>
            </div>   
            <div class="mb-3">
                <label class="form-lable" for="image">Image URL</label>
                <input class="form-control" type="text" id="image" name="campground[image]" required>
                 <div class="valid-feedback">
                    That's okay
                </div>
            </div> 
            <div class="mb-3">
                <label class="form-lable" for="price">Campground price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="price">$</span>
                    <input type="text" class="form-control" name="campground[price]" id="price" placeholder="0.00" required>
                </div>
                <div class="valid-feedback">
                    That's okay
                </div> 
            </div>
            <div class="mb-3">
                <label class="form-lable" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="campground[description]" required></textarea>
                 <div class="valid-feedback">
                    That's okay
                </div>
            </div> 
            <div class="mt-3">
                <button class="btn btn-success">Add campground</button>
            </div>
        </form>
        <a href="/campgrounds">All campgrounds</a>
    
    </div>
</div>
